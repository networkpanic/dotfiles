[include]
  path = ~/.gitconfig.d/alias.config
  path = ~/.gitconfig.d/core.config
  path = ~/.gitconfig.d/gitflow.config
  path = ~/.gitconfig.d/user.config

[hooks]
  global = ~/.githooks
  
[gui]
	pruneDuringFetch = true

[color]
	ui = auto
   interactive = true
   branch = true
   status = true

[init]
	templatedir = ~/.git_template

[commit]
	gpgsign = true

[fetch]
	prune = true

[merge]
  tool = vscode
  conflictstyle = diff3

[mergetool "vscode"]
  cmd = code --wait $MERGED

[diff]
  tool = vscode
  compactionHeuristic = true
  indentHeuristic = true
  algorithm = patience

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[http "https://gopkg.in"]
	followRedirects = true

[cola]
  spellcheck = false

[url "git@git.zeuz.io:"]
  insteadOf = https://git.zeuz.io/