source ~/.antigen/antigen.zsh

# Load the oh-my-zsh's library.
antigen use oh-my-zsh
antigen bundle robbyrussell/oh-my-zsh lib/


# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle archlinux
antigen bundle ssh-agent
antigen bundle rupa/z
antigen bundle changyuheng/fz
antigen bundle docker
antigen bundle docker-compose
antigen bundle extract
antigen bundle gpg-agent
antigen bundle git-extras
antigen bundle git-flow
antigen bundle pyenv
antigen bundle systemd
antigen bundle sudo
antigen bundle tmux
antigen bundle greymd/tmux-xpanes
antigen bundle httpie
antigen bundle catimg
antigen bundle nyan
antigen bundle lukechilds/zsh-better-npm-completion
antigen bundle dirhistory
antigen bundle git
antigen bundle pip
antigen bundle python
antigen bundle virtualenv
antigen bundle lein
antigen bundle kubectl
antigen bundle command-not-found
antigen bundle desyncr/auto-ls
antigen bundle zuxfoucault/colored-man-pages_mod
antigen bundle horosgrisa/mysql-colorize
antigen bundle man
antigen bundle unixorn/autoupdate-antigen.zshplugin
antigen bundle bric3/nice-exit-code
antigen bundle psprint/history-search-multi-word

# Syntax highlighting bundle.
antigen bundle zdharma/fast-syntax-highlighting
antigen bundle zsh-users/zsh-completions
antigen bundle zsh-users/zsh-autosuggestions


antigen theme gnzh


# Tell Antigen that you're done.
antigen apply


alias ls="ls --color=auto --group-directories-first"
alias shot="scrot -s ~/foo.png && xclip -selection clipboard -target image/png -i < ~/foo.png && rm -f ~/foo.png"
alias spotify="/usr/bin/spotify --force-device-scale-factor=1.5"


lel () {
  set -f
  script -q -f  -c "lolcat --spread 0.8 -F 0.4 '$@'" | tee > "$@".lel
  set +f
}


if [[ $(find ~/dotfiles/motd.lol -mmin +2 -print) ]]; then
  script -q -c "lolcat --spread 0.8 -F 0.4 ~/dotfiles/motd" > ~/dotfiles/motd.lol && rm typescript
fi

cat  ~/dotfiles/motd.lol

export TERMINAL=tilix
export GPG_TTY=$(tty)
export PATH=/home/npanic/.gem/ruby/2.4.0/bin:$PATH
